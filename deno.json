{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"]
	},
	"lock": false,
	"nodeModulesDir": true,
	"unstable": ["webgpu"],
	"npmRegistry": "https://mycompany.net/artifactory/api/npm/virtual-npm",
	"test": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
	},
	"tasks": {
		"start": "deno run --allow-all index.ts"
	},
	"imports": {
		"@langchain/anthropic": "npm:@langchain/anthropic@^0.2.3",
		"@langchain/community": "npm:@langchain/community@^0.2.18",
		"@langchain/core": "npm:@langchain/core@^0.2.15",
		"@langchain/langgraph": "npm:@langchain/langgraph@^0.0.26",
		"@langchain/mongodb": "npm:@langchain/mongodb@^0.0.4",
		"@langchain/openai": "npm:@langchain/openai@^0.2.1",
		"langchain": "npm:langchain@^0.2.9",
		"mongodb": "npm:mongodb@^6.8.0",
		"std/": "https://deno.land/std@0.224.0/",
		"zod": "npm:zod@^3.23.8"
	},
	"exclude": [
		"dist/"
	]
}
